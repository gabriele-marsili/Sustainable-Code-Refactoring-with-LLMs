{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false, 
    "types": ["jest", "node"],
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true, 
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": [
    "**/*.ts",
    "**/*.js" 
  ],
  "exclude": [
    "node_modules"
  ]
}